<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Additional hover effects */
      .btns a:hover {
        text-decoration: underline;
        opacity: 0.8;
      }
      .btns a:hover:first-child {
        color: #2563eb; /* Darker blue for Like button */
      }
      .btns a:hover:last-child {
        color: #9ca3af; /* Slightly lighter gray for Edit button */
      }
      .post:hover {
        background-color: #1f2937; /* Darker background on post hover */
        transform: scale(1.02); /* Slight scaling effect */
        transition: all 0.3s ease-in-out;
      }
    </style>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-5 md:p-10">
      <!-- Logout Button -->
      <div class="flex w-full justify-end mb-5">
        <a
          href="/logout"
          class="bg-red-500 hover:bg-red-600 rounded-md px-4 py-2 text-sm transition"
        >
          Log out
        </a>
      </div>

      <!-- User Greeting -->
      <h3 class="text-2xl mb-5"><span>Hello</span>, <%= user.name %></h3>
      <h5 class="mb-5">You can create a new post</h5>

      <!-- Post Form -->
      <form action="/post" method="post" class="space-y-4">
        <textarea
          class="w-full md:w-2/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md p-3 outline-none focus:border-blue-500 transition"
          name="content"
          placeholder="What's on your mind?"
        ></textarea>
        <div>
          <input
            class="px-4 py-2 w-full md:w-auto bg-blue-500 hover:bg-blue-600 text-white rounded-md cursor-pointer transition"
            type="submit"
            name=""
            value="Post"
          />
        </div>
      </form>
      <section>
        <div class="posts mt-10">
          <h3 class="text-zinc-400">Your posts</h3>
          <div
            class="postcontainer grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-5"
          >
            <%user.posts.reverse().forEach((post)=>{ %>
            <div class="post p-4 border-2 border-zinc-800 rounded-md transition">
              <div class="flex w-full align-center justify-between">
                <h4 class="text-lg font-bold text-blue-500">
                  <%=user.username%>
                </h4>
                <small class="text-zinc-400"
                  ><%=post.likes.length%> likes</small
                >
              </div>
              <p class="p-2"><%= post.content %></p>
              <div class="btns flex gap-4 mt-5 px-2">
                <a class="text-blue-500 transition" href="/like/<%=post._id%>"
                  ><%=post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"
                  %></a
                >
                <a class="text-zinc-500 transition" href="">Edit</a>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
